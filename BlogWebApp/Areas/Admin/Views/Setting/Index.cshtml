@model BlogWebApp.ViewModels.SettingVM
@{
    ViewData["Title"] = "Site Setting";
}




<div class="container-fluid">
    <a asp-controller="Post" asp-action="Index" class="btn btn-primary rounded-3 mb-1 ">Back</a>


    <div class="card">
        <div class="card-header bg-primary">
            <h4 class="card-title text-white">Setting</h4>
        </div>
        <div class="card-body">
            <form asp-controller="Setting" asp-action="Index" asp-area="Admin" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="Id" />
                <div class="row mb-2">
                    <div class="col-9">
                        <div class="mb-2">
                            <label>Title</label>
                            <input type="text" asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div class="mb-2">
                            <label>Title</label>
                            <input type="text" asp-for="SiteName" class="form-control" />
                            <span asp-validation-for="SiteName" class="text-danger"></span>
                        </div>
                        <div class="mb-2">
                            <label>Short Description</label>
                            <input type="text" asp-for="ShortDescription" class="form-control" />
                            <span asp-validation-for="ShortDescription" class="text-danger"></span>
                        </div>
                        <div class="mb-2">
                            <label>FaceBook Url</label>
                            <input type="text" asp-for="FacebookUrl" class="form-control" />
                            <span asp-validation-for="FacebookUrl" class="text-danger"></span>

                        </div>
                        <div class="mb-2">
                            <label>Github Url</label>
                            <input type="text" asp-for="GitHubUrl" class="form-control" />
                            <span asp-validation-for="GitHubUrl" class="text-danger"></span>
                        </div>
                        <div class="mb-2">
                            <label>Twitter Url</label>
                            <input type="text" asp-for="TwitterUrl" class="form-control" />
                            <span asp-validation-for="TwitterUrl" class="text-danger"></span>
                        </div>
                      
                    </div>
                    <div class="col-3">
                        <div class="mb-2">
                            @if (Model.ThumbnailUrl == null)
                            {
                                <img src="~/Thumbnail/thumbnail1.jpg" id="thumbnail" alt="Alternate Text" class="img-fluid" />
                            }
                            else
                            {
                                <img src="~/Thumbnail/@Model.ThumbnailUrl" id="thumbnail" alt="Alternate Text" class="img-fluid" />
                            }
                        </div>

                        <div class="mb-3">
                            <label for="formFile" class="form-label">Thumbnail</label>
                            <input type="file" class="custom-file" asp-for="Thumbnail">
                            <span asp-validation-for="Thumbnail" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <button type="submit" class="btn btn-primary rounded-3 w-100">Save</button>
                </div>

            </form>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(".custom-file").on("change", function(){
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
            document.getElementById('thumbnail').src = window.URL.createObjectURL(this.files[0]);
        })
    </script>
}

}
